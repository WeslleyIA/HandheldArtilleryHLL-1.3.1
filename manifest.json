{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "Handheld Artillery HLL",
    "version": "1.3.3",
    "author": "WSH9",
    "description": "An artillery calculator for Hell Let Loose.",
    "minimum-overwolf-version": "0.188.0",
    "icon": "icons/icon.png",
    "icon_gray": "icons/icon_gray.png",
    "launcher_icon": "icons/launcher_icon.ico",
    "window_icon": "icons/icon.png"
  },
  "permissions": [
    "Hotkeys",
    "GameControl",
    "GameInfo",
    "Extensions",
    "Streaming",
    "Profile"
  ],
  "data": {
    "start_window": "background",
    "windows": {
      "background": {
        "file": "background.html",
        "is_background_page": true
      },
      "in_game": {
        "file": "HandheldArtilleryHLL.html",
        "in_game_only": true,
        "transparent": true,
        "resizable": true,
        "size": { "width": 422, "height": 1010 },
        "min_size": { "width": 422, "height": 800 },
        "block_top_window_navigation": true,
        "popup_blocker": true
      },
      "desktop": {
        "file": "HandheldArtilleryHLL.html",
        "desktop_only": true,
        "transparent": true,
        "resizable": false,
        "show_in_taskbar": true,
        "show_window_chrome": false,
        "size": { "width": 422, "height": 1010 },
        "start_position": { "Top": 100, "Left": 100 },
        "block_top_window_navigation": true,
        "popup_blocker": true
      }
    },
    "hotkeys": {
      "toggle_show": {
        "title": "Show/Hide Calculator",
        "action-type": "custom",
        "default": "Ctrl+Shift+A"
      }
    },
    "launch_events": [
      {
        "event": "GameLaunch",
        "event_data": {
          "game_ids": [22134]
        },
        "start_minimized": false
      }
    ],
    "game_targeting": {
      "type": "dedicated",
      "game_ids": [22134]
    }
  }
}
